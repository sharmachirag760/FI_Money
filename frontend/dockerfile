# ---------- Build Stage ----------
    FROM node:18 as build

    WORKDIR /app
    COPY package*.json ./
    RUN npm install
    COPY . .
    
    # üîç Debug: show build output
    RUN npm run build && ls -al /app/build
    
    # ---------- Production Stage ----------
    FROM nginx:alpine
    
    COPY --from=build /app/build /usr/share/nginx/html
    EXPOSE 80
    CMD ["nginx", "-g", "daemon off;"]
    